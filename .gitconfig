[user]
	name = Kyle		# name
	email =	github@kylemiller.com	# email
[github]
	user = kamiller	# github username
[alias]
	st = status
	co = checkout
	ci = commit
	br = branch
	tags = tag --list
	unstage = reset HEAD
	hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --date=short
  put = push origin HEAD
[color]
	diff = auto
	status = auto
	branch = auto
	interactive = true

#[diff]
